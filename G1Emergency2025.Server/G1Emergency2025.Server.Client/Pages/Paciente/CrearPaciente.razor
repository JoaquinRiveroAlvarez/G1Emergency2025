@page "/pacientes/crear"
@using G1Emergency2025.Shared.DTO
@inject IHttpServicio Http
@inject NavigationManager Nav

<h3>Crear Nuevo Paciente</h3>

@if (cargando)
{
    <p>Cargando datos...</p>
}
else
{
    <EditForm Model="@modelo" OnValidSubmit="Grabar">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <h5>Datos de la Persona</h5>
        <div class="form-group">
            <label>Nombre</label>
            <InputText class="form-control" @bind-Value="modelo.Nombre" />
            <ValidationMessage For="@(() => modelo.Nombre)" />
        </div>

        <div class="form-group">
            <label>DNI</label>
            <InputText class="form-control" @bind-Value="modelo.DNI" />
            <ValidationMessage For="@(() => modelo.DNI)" />
        </div>

        <div class="form-group">
            <label>Dirección</label>
            <InputText class="form-control" @bind-Value="modelo.Dirección" />
            <ValidationMessage For="@(() => modelo.Dirección)" />
        </div>

        <div class="form-group">
            <label>Sexo</label>
            <InputSelect class="form-control" @bind-Value="modelo.Sexo">
                <option value="">-- Seleccionar --</option>
                <option value="Masculino">Masculino</option>
                <option value="Femenino">Femenino</option>
                <option value="Otro">Otro</option>
            </InputSelect>
            <ValidationMessage For="@(() => modelo.Sexo)" />
        </div>

        <div class="form-group">
            <label>Edad</label>
            <InputText class="form-control" @bind-Value="modelo.Edad" />
            <ValidationMessage For="@(() => modelo.Edad)" />
        </div>

        <hr />

        <h5>Datos del Paciente</h5>
        <div class="form-group">
            <label>Obra Social</label>
            <InputText class="form-control" @bind-Value="modelo.ObraSocial" />
            <ValidationMessage For="@(() => modelo.ObraSocial)" />
        </div>

        <br />
        <button class="btn btn-primary" type="submit">Guardar</button>
        <button class="btn btn-secondary" @onclick="Cancelar">Cancelar</button>
    </EditForm>
}

<p>@Mensaje</p>

@code {
    private PacienteCrearDTO modelo = new();
    private bool cargando = false;
    private string Mensaje = "";

    private async Task Grabar()
    {
        var resp = await Http.Post<PacienteCrearDTO, int>("api/paciente", modelo);
        if (!resp.Error)
        {
            Mensaje = "Paciente guardado correctamente.";
            await Task.Delay(500);
            Nav.NavigateTo("/pacientes", forceLoad: true);
        }
        else
        {
            Mensaje = resp.ObtenerError();
        }
    }

    private void Cancelar()
    {
        Nav.NavigateTo("/pacientes");
    }
}

